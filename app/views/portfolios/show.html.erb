<div class="container portfolio-form portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.thumb_image, 'main'), width: '100%', class:"img-fluid", alt:"Responsive image" %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <hr>
      <em><%= @portfolio_item.subtitle %></em>
      <hr>
      <p><%= @portfolio_item.body %></p>
      <h3>Technologies Used:</h3>  
      <% @portfolio_item.technologies.each do |b| %>
      <p><%= b.name %></p>
      <% end %>
    </div>
  </div>
</div>




