<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :portfolio_title, autofocus: true, class: 'form-control' %>
        <!--autofocus: true,-->
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_area :subtitle, id: :portfolio_subtitle, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <label class="btn btn-primary">
          Upload a main image file <%= form.file_field :main_image, style: 'display:none;' %> 
        </label>
        
      </div>      
      
      <div class="form-group">
        <label class="btn btn-primary">
          Upload a thumb image file <%= form.file_field :thumb_image, style: 'display:none;' %> 
        </label>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, id: :portfolio_body, class: 'form-control', rows: 13 %>
      </div>
    </div>
  </div>
    
  
  <hr>
  
  <div class="col-md-12">
    <h2>Technologies Used:</h2>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %>

     
       
           <%= link_to_add_association 'Add Technology', form, :technologies,  :onclick => "myVar = setTimeout(getFocus, 100)", 'data-association-insertion-method'    => 'prepend' %>
        
          <!--, 'data-association-insertion-method'    => 'after'-->
          <!--:class => "btn btn-small btn-danger", -->
    <!--, :id => "myEnter" -->

    </div>

    <div class="form-group">
      <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
  
  <div>
    
<!--    <input type="text" id="myText" value="A text field">-->

<!--<p>Click the buttons to give focus and/or remove focus from the text field.</p>-->

<!--<button type="button" onclick="getFocus()">Get focus</button>-->
<!--<button type="button" onclick="loseFocus()">Lose focus</button>-->

  </div>
  

<% end %>

