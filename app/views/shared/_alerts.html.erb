<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Qbecode Portfolio", sticky: false, time: 500) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Qbecode Portfolio", sticky: false, time: 500) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Qbecode Portfolio", sticky: false, time: 500) %>
<% end %>

